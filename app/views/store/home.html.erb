<div>
<span>Tags:<% tag_cloud Product.tag_counts, %w[s m l] do |tag| %></span>
<%= link_to tag.name, tag_path(tag.name) %>
<% end %>
</div>

<% @products.each do |product| %>
<div>
<h><%= product.title %></h>
</div>
<%= image_tag product.avatar.url(:thumb) %>
<%= sanitize(product.description) %>
<p>Tags:<%= raw product.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>

<%= product.price %>
<%=button_to '加入购物车', line_items_path(product_id:product) %>
<% end %>